<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <!--<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />-->
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>
    
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <!-- 5、日志文件的路径 -->
      <param name="File" value="Log\\LogError\\"/>
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMM\\yyyyMMdd.'log'" />
      <param name="AppendToFile" value="true"/>
      <!--混合使用日期和文件大小变换日志文件名-->
      <param name="RollingStyle" value="Composite" />
      <!--单个文件最大数量-->
      <param name="MaximumFileSize" value="2MB"/>
      <!--保留的log文件数量 超过此数量后 自动删除之前的  -->
      <param name="MaxSizeRollBackups" value="10" />
      <!--最小锁定模型以允许多个进程可以写入同一个文件-->
      <param name="lockingModel"  type="log4net.Appender.FileAppender+MinimalLock" />

      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <param name="ConversionPattern" value="%-5p%d{yyyy-MM-dd HH:mm:ss}-%m%n"/>
      </layout>
    </appender>

    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <!-- 5、日志文件的路径 -->
      <param name="File" value="Log\\LogInfo\\"/>
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMM\\yyyyMMdd.'log'" />
      <param name="AppendToFile" value="true"/>
      <!--混合使用日期和文件大小变换日志文件名-->
      <param name="RollingStyle" value="Composite" />
      <!--单个文件最大数量-->
      <param name="MaximumFileSize" value="2MB"/>
      <!--保留的log文件数量 超过此数量后 自动删除之前的  -->
      <param name="MaxSizeRollBackups" value="10" />
      <!--最小锁定模型以允许多个进程可以写入同一个文件-->
      <param name="lockingModel"  type="log4net.Appender.FileAppender+MinimalLock" />

      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <param name="ConversionPattern" value="%-5p%d{yyyy-MM-dd HH:mm:ss}-%m%n"/>
      </layout>
    </appender>
    

    <!--监控日志-->
    <appender name="MonitorAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Log\\LogMonitor\\" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMM\\yyyyMMdd.'log'" />
      <param name="AppendToFile" value="true" />
      <!--混合使用日期和文件大小变换日志文件名-->
      <param name="RollingStyle" value="Composite" />
      <!--单个文件最大数量-->
      <param name="MaximumFileSize" value="2MB"/>
      <!--保留的log文件数量 超过此数量后 自动删除之前的  -->
      <param name="MaxSizeRollBackups" value="10" />
      <!--最小锁定模型以允许多个进程可以写入同一个文件-->
      <param name="lockingModel"  type="log4net.Appender.FileAppender+MinimalLock" />
      
      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <param name="ConversionPattern" value="%-5p%d{yyyy-MM-dd HH:mm:ss}-%m%n"/>
        <!--<conversionPattern value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别：  %-5level %n跟踪描述：%message%newline %n"/>-->
      </layout>
    </appender>

    <!--<root>
      --><!-- 4、日志输出的级别，从低到高分别有ALL,DEBUG,INFO,WARN,ERROR,FATAL,OFF详细说明请参见实施文档 --><!--
      <level value="ALL"/>
      --><!--<appender-ref ref="LogInfoAppender"/>--><!--
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="InfoAppender" />
      <appender-ref ref="ErrorAppender" />
      <appender-ref ref="MonitorAppender" />
    </root>-->

    <!--error日志-->
    <logger name="logerror">
      <level value="ERROR" />
      <appender-ref ref="ErrorAppender" />
    </logger>
    <!--Info日志-->
    <logger name="loginfo">
      <level value="INFO" />
      <appender-ref ref="InfoAppender" />
    </logger>
    <!--监控日志-->
    <logger name="logmonitor">
      <level value="INFO" />
      <appender-ref ref="MonitorAppender" />
    </logger>
    
  </log4net>
</configuration>
